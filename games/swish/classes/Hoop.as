class Hoop {	private var clip:MovieClip;	private var option:Option;	public function Hoop(holder:MovieClip, option:Option, index:Number) {		this.option = option;		clip = holder.attachMovie("hoop", "hoop_"+index, holder.getNextHighestDepth());		clip._x = (index * clip._width);		// *** TODO: Use StimulusDisplay		clip.hoop_txt = option.getStimulus().getContent();	}	//	public function getClip():MovieClip {		return clip;	}	public function getOption():Option {		return option;	}	public function destroy():Void {		removeMovieClip(clip);		delete this;	}}