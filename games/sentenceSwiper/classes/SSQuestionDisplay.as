import mx.utils.Delegate;import mx.transitions.Tween;import flash.geom.Point;class SSQuestionDisplay extends StimulusDisplay {	private var target:Point;		public function SSQuestionDisplay(target:MovieClip, id:String, stim:Stimulus) {		super(target, id, stim);	}		public function bounceIn():Void {		new Tween(clip, "_x", mx.transitions.easing.Elastic.easeOut, clip._x - 200, target.x, 1, true);	}		private function setDefaultTextFormat():Void {		txtFmt = new TextFormat("Arial", 14, 0x333333);		txtField.selectable = false;		txtField.autoSize = true;		txtField.setTextFormat(txtFmt);	}		private function restrainDimensions():Void {		if (clip._width > maxWidth || clip._height > maxHeight) {			if (clip._width > clip._height) {				clip._width = maxWidth;				clip._yscale = clip._xscale;			} else {				clip._height = maxHeight;				clip._xscale = clip._yscale;			}			origXScale = clip._xscale;			origYScale = clip._yscale;			clip.onRollOver = Delegate.create(this, magnify);			clip.onRollOut = Delegate.create(this, recover);		}		setPos(target.x, target.y);	}		public function setPos(xx:Number, yy:Number):Void {		target = new Point(xx, yy);				clip._x = xx;		if (getStimulusType() == Stimulus.TEXT) {			clip._y = yy + 3;		} else if (getStimulusType() == Stimulus.IMAGE) {			clip._y = yy - 13;		} else {			clip._y = yy;		}	}}