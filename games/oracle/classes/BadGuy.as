import mx.utils.Delegate;import mx.transitions.Tween;class BadGuy {		private var clip:MovieClip;	private var animWait:Number;		public function BadGuy() {		clip = LZGame.getStage().attachMovie("badguy", "badguy", LZGame.getStage().getNextHighestDepth(), {_x: 300, _y: 243});	}		public function launchProjectile():Void {		clip.gotoAndPlay("angry");		animWait = setInterval(this, "attack", 2000);	}		public function attack():Void {		clearInterval(animWait);		clip.gotoAndPlay("attack");		animWait = setInterval(this, "rest", 2000);	}		public function rest():Void {		clearInterval(animWait);		clip.gotoAndStop("static");	}		public function destroy():Void {		removeMovieClip(clip);	}}