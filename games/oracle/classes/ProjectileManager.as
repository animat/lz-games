import mx.utils.Delegate;//class ProjectileManager {		private var projectiles:Array;	private var availableScreens:Array;	private var activeScreens:Array;	private var timedRelease:Number;		public function ProjectileManager() {		projectiles = new Array();	}		public function dropProjectiles(incorrectScreens:Array):Void {		projectiles = new Array();		availableScreens = incorrectScreens;		activeScreens = new Array();				clearInterval(timedRelease);		timedRelease = setInterval(this, "dropNextProjectile", 1500);	}		private function dropNextProjectile():Void {		var rndm:Number = random(availableScreens.length);		var proj:Projectile = new Projectile(this, projectiles.length, availableScreens[rndm].getPosition());		projectiles.push(proj);				var scrn:Screen = availableScreens[rndm];		availableScreens.splice(rndm, 1);		activeScreens.push(scrn);				if (availableScreens.length == 0) {			availableScreens = activeScreens;		}	}		public function halt():Void {		trace("stop dropping cows!");		clearInterval(timedRelease);	}	}