import mx.utils.Delegate;//class TreeBranch {	private var manager:TreeManager;	private var txtfield:TextField;	private var shadowtxtfield:TextField;	private var txtformat:TextFormat;	private var shadowtxtformat:TextFormat;	private var highlighttxtformat:TextFormat;	private var clip:MovieClip;	private var option:Option;	private var side:String;		public function TreeBranch(manager:TreeManager, holder:MovieClip, option:Option, index:Number) {		this.manager = manager;		this.option = option;				txtformat = new TextFormat("Arial", 16, 0xCCCCCC);		txtformat.bold = true;		shadowtxtformat = new TextFormat("Arial", 16, 0x669900);		shadowtxtformat.bold = true;		highlighttxtformat = new TextFormat("Arial", 16, 0x50321F);		highlighttxtformat.bold = true;				clip = holder.attachMovie("trees", "trees"+index, holder.getNextHighestDepth());		clip.onRelease = Delegate.create(this, selectTree);		displayOptionText(holder, index);	}	public function displayOptionText(holder:MovieClip, index:Number):Void {		shadowtxtfield = holder.createTextField("trees"+index+"_shadow_txt", holder.getNextHighestDepth(), 0, 0, 0, 0);		shadowtxtfield.autoSize = true;		shadowtxtfield.selectable = false;		shadowtxtfield.text = option.getStimulus().getContent();		shadowtxtfield.setTextFormat(shadowtxtformat);				txtfield = holder.createTextField("trees"+index+"_txt", holder.getNextHighestDepth(), 0, 0, 0, 0);		txtfield.autoSize = true;		txtfield.selectable = false;		txtfield.text = option.getStimulus().getContent();		txtfield.setTextFormat(txtformat);	}	public function selectTree() {		manager.commitToTreeBranch(this);	}	public function dodgeBird() {		clip.gotoAndPlay("short");	}	public function startFlashing():Void {		clip.gotoAndPlay("flashing");		clip.enabled = true;		txtfield.setTextFormat(highlighttxtformat);	}	public function stopFlashing():Void {		clip.gotoAndStop("static");		clip.enabled = false;		txtfield.setTextFormat(txtformat);	}	public function destroyClip():Void {		clip.removeMovieClip();		txtfield.removeTextField();		shadowtxtfield.removeTextField();	}	//	public function setClipPos(x:Number, y:Number):Void {		clip._x = x;		clip._y = y;		txtfield._x = clip._x + clip._width + 6;		shadowtxtfield._x = txtfield._x + 1;		txtfield._y = clip._y + 14;		shadowtxtfield._y = txtfield._y + 2;	}	public function reverseClip():Void {		clip._xscale = -100;		txtfield._x = clip._x - clip._width - txtfield._width;		shadowtxtfield._x = txtfield._x - 1;	}	public function getTargetClip():MovieClip {		return clip;	}	public function getTargetY():Number {		return clip._y;	}	public function getOption():Option {		return option;	}}