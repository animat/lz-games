import mx.utils.Delegate;import mx.transitions.Tween;//class Score {	private var scoreNum:Number;	private var clip:MovieClip;	private var scoreTxt:TextField;	private var scoreFmt:TextFormat;	private var warnClip:MovieClip;	private var warnFmt:TextFormat;	//	public function Score() {		scoreNum = 0;		clip = LZGame.getStage().attachMovie("scoreBG", "scoreBG", LZGame.getStage().getNextHighestDepth(), {_x: 500, _y: 11, _alpha: 80});		scoreTxt = clip.scoreTxt;		scoreTxt.text = "0";		scoreFmt = new TextFormat("EmbedGillSansItalic", 24, 0x594240);		warnFmt = new TextFormat("EmbedGillSansItalic", 24, 0x13861E);	}	public function addPoints(num:Number):Void {		scoreNum += num;		var displayNum:String = String(scoreNum);		scoreTxt.text = displayNum;		scoreTxt.setTextFormat(scoreFmt);		addWarning(num);	}	private function addWarning(val:Number):Void {		warnClip = clip.createEmptyMovieClip("grow", clip.getNextHighestDepth());		warnClip.createTextField("txtField", clip.getNextHighestDepth(), 10, 10, 100, 100);		warnClip.txtField.text = "+"+val;				warnClip.txtField.autoSize = true;		warnClip.txtField.selectable = false;		warnClip.txtField.embedFonts = true;		warnClip.txtField._quality = "BEST";		warnClip.txtField.setTextFormat(warnFmt);				var growFactor:Number = 2;		var xsTwn:Tween = new Tween(warnClip, "_xscale", mx.transitions.easing.Regular.easeOut, 100, 100 * growFactor, 1, true);		var xTwn:Tween = new Tween(warnClip, "_x", mx.transitions.easing.Regular.easeOut, 									warnClip._x, (warnClip._x - 25), 1, true);		var ysTwn:Tween = new Tween(warnClip, "_yscale", mx.transitions.easing.Regular.easeOut, 100, 100 * growFactor, 1, true);		var yTwn:Tween = new Tween(warnClip, "_y", mx.transitions.easing.Regular.easeOut, 									warnClip._y, (warnClip._y + (warnClip._height / 1.5)), 1, true);		var aTwn:Tween = new Tween(warnClip, "_alpha", mx.transitions.easing.Regular.easeOut, 100, 0, 2, true);		aTwn.onMotionFinished = Delegate.create(this, destroyWarnClip);	}	private function destroyWarnClip():Void {		removeMovieClip(warnClip);	}	public function destroy():Void {		clip.removeMovieClip();		delete this;	}	public function getScore():Number {		return scoreNum;	}	}