class AnswerDisplay {	private var classScope:Object;	private var currentQuestion:Question;	private var currentQuestionLang:String;	private var currentLetterIndex:Number;	private var lettersLeft:Number;	//	private static var textFormatting = new TextFormat("Arial", 32, 0xFFFFFF, true);	private var holderClip:MovieClip;	//	public function AnswerDisplay(classScope:Object, currentQuestion:Question) {		this.classScope = classScope;		this.currentQuestion = currentQuestion;		currentQuestionLang = currentQuestion.getResponses()[0].getStimulus().getContent();		holderClip = LZGame.getStage().createEmptyMovieClip("wordHolder", 100);		holderClip._x = 470;		holderClip._y = 50;		currentLetterIndex = 0;		lettersLeft = 0;		createLetterMCs();	}		private function createLetterMCs():Void {		var letterXPos:Number = 0;		var letterCounter:Number = 0;		for (var i:Number = 0; i < currentQuestionLang.length; i++) {			if (currentQuestionLang.charAt(i) == " ") {				letterXPos += 30;			} else {				var newLetterMC:MovieClip = holderClip.createEmptyMovieClip("letter_"+letterCounter, letterCounter);				var line:MovieClip = createUnderline(newLetterMC, letterCounter);				var txtfield:TextField = createTextfield(newLetterMC, currentQuestionLang.charAt(i));				line._y = txtfield._height - 5;				txtfield._x = (line._width / 2) - (txtfield._width / 2);				letterXPos += newLetterMC._width + 2;				letterPosition(newLetterMC, letterXPos);				newLetterMC._x = letterXPos;				lettersLeft++;				letterCounter++;			}		}		resetWordPosition();		hideAllLetters();	}	private function createTextfield(letterClip:MovieClip, letter:String):TextField {		letterClip.createTextField("textfield", 10, 0, 0, 0, 0);		letterClip.textfield.autoSize = true;		letterClip.textfield.setNewTextFormat(textFormatting);		letterClip.textfield.text = letter;		return letterClip.textfield;	}	private function createUnderline(letterClip:MovieClip, letterNum:Number):MovieClip {		var line:MovieClip = letterClip.attachMovie("letterUnderline", "letterUnderline", 1);		return line;	}	private function letterPosition(newLetterMC:MovieClip, xPos:Number):Void {		newLetterMC._x = xPos;		newLetterMC.letterUnderline._width = newLetterMC._width;	}	private function resetWordPosition():Void {		holderClip._x = Stage.width - holderClip._width - 50;	}	public function hideAllLetters():Void {		for (var i:Number = 0; i < currentQuestionLang.length; i++) {			var letterMC:MovieClip = holderClip["letter_"+i];			letterMC.textfield._visible = false;		}	}	//	public function getCorrectLetterMC():MovieClip {		return holderClip["letter_"+currentLetterIndex];	}	public function getCorrectWord():String {		return currentQuestionLang;	}	public function revealLetter():Void {		var letterMC:MovieClip = getCorrectLetterMC();		letterMC.textfield._visible = true;	}	public function decreaseLettersLeft():Void {		currentLetterIndex++;	}	public function getLettersLeft():Number {		return lettersLeft - currentLetterIndex;	}	public function wordIsFinished():Boolean {		return (getLettersLeft() == 0);	}}