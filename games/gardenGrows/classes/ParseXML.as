import mx.utils.Delegate;class ParseXML {	private var xml:XML;	private var classScope:Object;	private var gameLang:String;	//	public function ParseXML(xml_file:String, classScope:Object) {		this.classScope = classScope;		xml = new XML();		xml.ignoreWhite = true;		xml.onLoad = Delegate.create(this, loadQuestions);		xml.load(xml_file);	}	//	public function loadQuestions():Void {		var questionsList:Array = new Array();		var node:Array = xml.firstChild.childNodes[2].childNodes;		gameLang = xml.firstChild.childNodes[4].firstChild.nodeValue;		// Create all of the questionMC instances for the panel		for (var i:Number = 0; i<node.length; i++) {			var engText:String = node[i].attributes.english;			var langText:String = node[i].attributes.lang;			//trace(engText + " " + langText);			var currentQuestion:Question = new Question(engText, langText, classScope, i);			questionsList.push(currentQuestion);		}		classScope.getQuestionsXML(questionsList);	}	//	public function getGameLang():String {		trace(gameLang);		return gameLang;	}}