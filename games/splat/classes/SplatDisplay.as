class SplatDisplay extends StimulusDisplay {	public function SplatDisplay(target:MovieClip, id:String, stim:Stimulus) {		super(target, id, stim);	}		private function setDefaultTextFormat():Void {		txtFmt = new TextFormat("Arial", 14, 0xFFFFFF);		txtField.selectable = false;		txtField.autoSize = true;		txtField.setTextFormat(txtFmt);	}		public function setPos(xx:Number, yy:Number):Void {		clip._x = xx - clip._width;		if (getStimulusType() == Stimulus.TEXT) {			clip._y = yy + 3;			clip._x = xx + 15;		} else if (getStimulusType() == Stimulus.IMAGE) {			clip._y = yy - 13;		} else {			clip._y = yy;		}	}}