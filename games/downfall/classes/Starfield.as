class Starfield {	private var main:MovieClip;	private var starHolder:MovieClip;	private var stars:Array;	public function Starfield(main:MovieClip) {		this.main = main;		stars = new Array();		starHolder = main.createEmptyMovieClip("starHolder", main.getNextHighestDepth());		createStars();	}	private function createStars():Void {		for (var i:Number = 0; i < 50; i++) {			var tmp:MovieClip = starHolder.attachMovie("star", "star"+i, starHolder.getNextHighestDepth());			stars.push(new Star(tmp));		}	}	public function pauseStars():Void {		for (var i:Number = 0; i < stars.length; i++) {			stars[i].pauseStar();		}	}	public function resumeStars():Void {		for (var i:Number = 0; i < stars.length; i++) {			stars[i].resumeStar();		}	}}