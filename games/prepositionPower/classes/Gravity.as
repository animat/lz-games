class Gravity {	public static function gravitize(mc:MovieClip):Void {		var gravityForce:MovieClip = mc.createEmptyMovieClip("gravityForce", mc.getNextHighestDepth());		gravityForce.gravitySpeed = 0		gravityForce.onEnterFrame = function() {			gravityForce.gravitySpeed += 0.7;			mc._y += gravityForce.gravitySpeed;		}	}	public static function ungravitize(mc:MovieClip):Void {		removeMovieClip(mc.gravityForce);	}}