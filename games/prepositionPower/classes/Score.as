class Score {		private var correctShotsPanel:MovieClip;	private var totalShotsPanel:MovieClip;	private var correctShots:Number;	private var totalShots:Number;		public function Score() {		correctShotsPanel = LZGame.getStage().attachMovie("scorePanel", "correctShotsPanel",		 						LZGame.getStage().getNextHighestDepth(), {_x: 168, _y: 298});		totalShotsPanel = LZGame.getStage().attachMovie("scorePanel", "totalShotsPanel",								LZGame.getStage().getNextHighestDepth(), {_x: 327, _y: 298});		correctShots = 0;		totalShots = 0;		correctShotsPanel.scoreDisplay = correctShots;		totalShotsPanel.scoreDisplay = totalShots;	}		public function increaseCorrect():Void {		correctShots++;		correctShotsPanel.scoreDisplay = correctShots;			}	public function increaseTotal():Void {		totalShots++;		totalShotsPanel.scoreDisplay = totalShots;	}		public function getCorrect():Number {		return correctShots;	}	public function getTotal():Number {		return totalShots;	}}