import mx.utils.Delegate;import flash.external.ExternalInterface;class RunGame extends LZGame implements gametypes.ExposureGame {	private var stimDisplay:StimulusDisplay;		public function RunGame(main:MovieClip) {		super(main);				main.nextBtn.onRelease = Delegate.create(this, playNext);		main.prevBtn.onRelease = Delegate.create(this, playPrev);		main.playBtn.onRelease = Delegate.create(this, playAudio);		main.pauseBtn.onRelease = Delegate.create(this, pauseAudio);		refreshDisplay();	}	public function refreshDisplay():Void {		if (stimDisplay != undefined) {			stimDisplay.reset();		}		stimDisplay = new RadioStimulusDisplay(main, "stimDisplay", questionList.getCurrentQ().getStimulus(), main.speakers);		stimDisplay.setPos(300, 200);		stimDisplay.hide();				main.stationMC.station = questionList.getCurrentQ().getResponses()[0].getStimulus().getContent();	}	public function playAudio():Void {		stimDisplay.playAudio();	}	public function pauseAudio():Void {		if (stimDisplay.isPlaying()) {			stimDisplay.stopAudio();		} else {			playAudio();		}	}	public function playNext():Void {		if (questionList.getQByIncrement() != null) {			refreshDisplay();		}	}	public function playPrev():Void {		if (questionList.getQByDecrement() != null) {			refreshDisplay();		}	}	public function getScore():String {		return "";	}}