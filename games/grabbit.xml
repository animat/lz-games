					<str part="intrans_verb" value="run" />
					<str part="" value="to the store." />
				</sentence>
				<sentence>
					<str part="" value="At the store" />
					<str part="subject" value="the children" />
					<str part="transitive verb" value="buy" />
					<str part="direct object" value="lots of candy." />
				</sentence>
				<sentence>
					<str part="" value="With the candy" />
					<str part="" value="in their pockets," />
					<str part="subject" value="the children" />
					<str part="intransitive verb" value="leave" />
					<str part="" value="smiling." />
