					<str part="subject" value="Joe" />
					<str part="transitive verb" value="helps" />
					<str part="direct object" value="Suzy" />
					<str part="" value="stand up," />
					<str part="" value="and together" />
					<str part="subject" value="they" />
					<str part="transitive verb" value="pick up" />
					<str part="direct object" value="the candy." />
