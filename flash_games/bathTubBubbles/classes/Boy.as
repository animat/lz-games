import mx.utils.Delegate;class Boy {	private var stimDisplay:BoatQuestionDisplay;	private var hesitateThrow:Number;	public var clip:MovieClip;	//	public function Boy() {		clip = LZGame.getStage().boy;	}		public function resetAnim():Void {		clip.gotoAndStop("static");	}	public function wrongAnim():Void {		clip.gotoAndPlay("wrong");	}	public function correctAnim():Void {		clip.gotoAndPlay("correct");		hesitateThrow = setInterval(this, "throwDisplay", 690);	}	public function correctFrame():Void {		clip.gotoAndStop("correct");	}	private function throwDisplay():Void {		stimDisplay.throwInTheAir();		clearInterval(hesitateThrow);	}	public function wince():Void {		clip.gotoAndPlay("wince");	}		public function setStimulusDisplay(s:Stimulus):Void {		stimDisplay = new BoatQuestionDisplay(clip, "qDisplay", s);		stimDisplay.setPos(160, 130);		stimDisplay.setTextFormat(new TextFormat("Trebuchet MS", 16, 0xBD0027));	}	public function resetStimulusDisplay():Void {		stimDisplay.reset();		delete stimDisplay;	}			public function getStimulusDisplay():StimulusDisplay {		return stimDisplay;	}}