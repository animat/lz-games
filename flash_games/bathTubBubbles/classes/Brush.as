import mx.utils.Delegate;//class Brush {	private var classScope:RunGame;	private var clip:MovieClip;	private var clickState:Number;	//	public function Brush(classScope:RunGame) {		this.classScope = classScope;		clip = LZGame.getStage().brush;		clickState = 0;		clip.onRelease = Delegate.create(this, goAndBrush);	}	public function restoreBrush():Void {		clip.gotoAndPlay("static");	}	private function goAndBrush():Void {		if (clickState == 1) {			if (!LZGame.isBusy()) {				clip.gotoAndPlay("clicked2");				classScope.boy.wince();				clickState = 0;			}		} else {			clickState = 1;			clip.gotoAndPlay("clicked1");		}	}}