class StoneManager {	//	private var classScope:RunGame;	private var stones:Array;	private var stonesHolder:MovieClip;	private var targetX:Number;	private var targetY:Number;	//	public function StoneManager(classScope:RunGame) {		this.classScope = classScope;		stones = new Array();		stonesHolder = LZGame.getStage().createEmptyMovieClip("stonesHolder", LZGame.getStage().getNextHighestDepth());		stonesHolder._x = 160;		targetX = 0;		targetY = 72;	}	public function createStone(stim:Stimulus):Void {		stones.push(new Stone(stonesHolder, stim, stones.length, targetX, targetY));		resetTargetPosition();	}	private function resetTargetPosition():Void {		targetX += 88;		if (stones.length == 5) {			targetX = 25;			targetY = 35;		} else if (stones.length == 9) {			targetX = 50;			targetY = 0;		}	}	//	public function getStonesHolder():MovieClip {		return stonesHolder;	}}