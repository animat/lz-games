class AnswerDisplay {	private var classScope:Object;	private var currentQuestion:Question;	private var currentQuestionLang:String;		private static var textFormatting = new TextFormat("Arial", 32, 0xFFFFFF, true);	private static var shadowTextFormatting = new TextFormat("Arial", 32, 0x999999, true);	private var holderClip:MovieClip;		public function AnswerDisplay(classScope:Object, currentQuestion:Question) {		this.classScope = classScope;		this.currentQuestion = currentQuestion;		currentQuestionLang = currentQuestion.getLangText();		trace("say what? lang :: "+currentQuestionLang);				holderClip = classScope.main.createEmptyMovieClip("wordHolder", 100);		holderClip._x = 450;		holderClip._y = 100;				createLetterMCs();	}		private function createLetterMCs():Void {		var letterXPos:Number = 0;		for (var i:Number = 0; i < currentQuestionLang.length; i++) {			var newLetterMC:MovieClip = holderClip.createEmptyMovieClip("letter_"+i, i);						var line:MovieClip = createUnderline(newLetterMC, i);			createTextfield(newLetterMC, currentQuestionLang.charAt(i));						letterXPos += newLetterMC._width + 2;			letterPosition(newLetterMC, letterXPos, i);			newLetterMC._x = letterXPos;		}		resetWordPosition();	}		private function createTextfield(letterClip:MovieClip, letter:String):Void {		letterClip.createTextField("textfield", 10, 0, 0, 0, 0);		letterClip.textfield.autoSize = true;		letterClip.textfield.border = true;		letterClip.textfield.setNewTextFormat(textFormatting);		letterClip.textfield.text = letter;	}		private function createUnderline(letterClip:MovieClip, letterNum:Number):MovieClip {		var line:MovieClip = letterClip.attachMovie("letterUnderline", "letterUnderline", 1);		return line;	}		private function letterPosition(newLetterMC:MovieClip, xPos:Number, num:Number):Void {		newLetterMC._x = xPos;		newLetterMC.letterUnderline._width = newLetterMC._width;	}		private function resetWordPosition():Void {		holderClip._x = Stage.width - holderClip._width - 50;	}}