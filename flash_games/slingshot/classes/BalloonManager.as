import flash.geom.Point;class BalloonManager {	private var holder:MovieClip;	private var balloons:Array;		public function BalloonManager(options:Array, bowAndArrow:BowAndArrow) {		balloons = new Array();		holder = RunGame.getStage().createEmptyMovieClip("balloonHolder", RunGame.getStage().getNextHighestDepth(), {_x: 0, _y: 0});		createBalloons(options, bowAndArrow);	}		private function createBalloons(options:Array, bowAndArrow:BowAndArrow):Void {		var intervalSpace:Number = 600 / options.length;		var bufferSpace:Number = intervalSpace / 4;		for (var i:Number = 0; i < options.length; i++) {			var tmp:Balloon = new Balloon(holder, i, options[i], bowAndArrow);			tmp.setTarget(new Point(bufferSpace + (i * intervalSpace), 30));			balloons.push(tmp);		}	}		public function setCorrectBalloon(stim:Stimulus):Void {		for (var i:Number = 0; i < balloons.length; i++) {			if (balloons[i].getOption().getStimulus().equals(stim)) {				balloons[i].setCorrect(true);			} else {				balloons[i].setCorrect(false);			}		}	}		public function resetBalloons():Void {		for (var i:Number = 0; i < balloons.length; i++) {			balloons[i].reset();					}	}		public function flyAwayBalloons():Void {		for (var i:Number = 0; i < balloons.length; i++) {			balloons[i].flyAway();		}	}		public function flyAwayAndResetBalloons():Void {		for (var i:Number = 0; i < balloons.length; i++) {			balloons[i].flyAwayAndReset();					}	}		public function setRenew(val:Boolean):Void {		for (var i:Number = 0; i < balloons.length; i++) {			balloons[i].setRenew(val);		}	}		public function destroy():Void {		for (var i:Number = 0; i < balloons.length; i++) {			balloons[i].destroy();		}	}		public function pauseBalloons():Void {		for (var i:Number = 0; i < balloons.length; i++) {			balloons[i].pauseBalloon();		}	}	public function resumeBalloons():Void {		for (var i:Number = 0; i < balloons.length; i++) {			balloons[i].resumeBalloon();		}	}}