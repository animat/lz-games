class ScoreCard {	private var score:Number;	private var clip:MovieClip;	public function ScoreCard(main:MovieClip) {		score = 0;		clip = LZGame.getStage().attachMovie("scorebg", "scorebg", LZGame.getStage().getNextHighestDepth());		clip._x = 5;		clip._y = 5;		addScore(0);	}	public function focusScore():Void {		clip._xscale *= 1.3;		clip._yscale *= 1.3;		clip._x = (LZGame.getStage()._width / 2) - (clip._width / 2);	}	public function addScore(pts:Number):Void {		score += pts;		clip.pointCounter.text = getScore() + " pts";	}	public function getScore():Number {		return score;	}}