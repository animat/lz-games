import mx.utils.Delegate;class Shadow {	private var clip:MovieClip;	private var ball:Basketball;	public function Shadow(main:MovieClip, ball:Basketball) {		this.ball = ball;		clip = main.attachMovie("shadow", "shadow", main.getNextHighestDepth());		clip.onEnterFrame = Delegate.create(this, chaseBall);	}	private function chaseBall():Void {		clip._x = ball.getXPos() + (clip._width / 2);		clip._y = ball.getBouncePt() + 45;		clip._xscale = ball.getScaler();		clip._yscale = ball.getScaler();		clip._alpha = ball.getScaler();	}	public function getClip():MovieClip {		return clip;	}	public function destroy():Void {		clip._visible = false;		delete clip.onEnterFrame;		delete this;	}}