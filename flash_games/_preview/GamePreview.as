class GamePreview {	//	private var gameName:String;	private var clip:MovieClip;	private var path:String;	private var delay:Number;	private var scaleAmount:Number;	//	public function GamePreview(gameName:String, clip:MovieClip, path:String) {		this.gameName = gameName;		this.clip = clip;		this.path = path;		scaleAmount = 4;		//		loadSwf();		triggerGameSequence();	}	public function loadSwf():Void {		clip.loadMovie(path+gameName+".swf");	}	public function triggerGameSequence():Void {		delay = setInterval(this, "playGame", 3000);	}	public function playGame():Void {		clearInterval(delay);		clip.gotoAndStop("game");		delay = setInterval(this, "cleanUp", 500);	}	public function cleanUp():Void {		if (clip.runGame != undefined) {			clearInterval(delay);			trace("cleanUp()");			setInterval(this, "correctAnim", 2500);		}	}	public function correctAnim():Void {		clearInterval(delay);		clip.runGame.correctAnswer();		delay = setInterval(this, "incorrectAnim", 3000);	}	public function incorrectAnim():Void {		clearInterval(delay);		clip.runGame.incorrectAnswer();		delay = setInterval(this, "finish", 3000);	}	public function finish():Void {		clearInterval(delay);		clip.runGame.winGame();	}}