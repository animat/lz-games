import flash.geom.Point;//class CorrectTree {	private var classScope:RunGame;	private var treeHitArea:MovieClip;	private var groupNameClip:MovieClip;	private var treeCoords:Array;	private var usedTreeCoords:Array;	//	public function CorrectTree(classScope:RunGame) {		this.classScope = classScope;		treeHitArea = LZGame.getStage().treeHitArea;		groupNameClip = LZGame.getStage().optionGroupDisplay;		treeCoords = new Array(			new Point(177, 11),			new Point(290, 2),			new Point(401, 4),			new Point(142, 38),			new Point(248, 35),			new Point(407, 34),			new Point(156, 67),			new Point(290, 70),			new Point(396, 60),			new Point(179, 94),			new Point(283, 96),			new Point(401, 95),			new Point(167, 118),			new Point(273, 122),			new Point(379, 122),			new Point(219, 150),			new Point(321, 154),			new Point(315, 28)			);		usedTreeCoords = new Array();	}	public function getRandomTreeCoord():Point {		var rndm:Number = Math.floor(Math.random() * treeCoords.length);		var pt:Point = treeCoords[rndm];		usedTreeCoords.push(treeCoords.splice(rndm, 1));		return pt;	}	public function resetSpaces():Void {		while(usedTreeCoords.length > 0) {			treeCoords.push(usedTreeCoords.pop());		}	}	public function checkForHit(attempt:TreeOption):Boolean {		return attempt.getClip().hitTest(treeHitArea);	}	// *** TODO: Use a StimulusDisplay here	public function setGroupName(optn:Option):Void {		groupNameClip.txt = optn.getStimulus().getContent();	}	public function getGroupName():String {		return groupNameClip.groupTxt;	}}