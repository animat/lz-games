import mx.utils.Delegate;import mx.transitions.Tween;import flash.filters.DropShadowFilter;class QuestionDisplay {	private var clip:MovieClip;	private var index:Number;	private var display:String;	private var targetX:Number;	private var targetY:Number;		public function QuestionDisplay(index:Number) {		this.index = index;		clip = LZGame.getStage().createEmptyMovieClip("q_"+index, LZGame.getStage().getNextHighestDepth());		makeTextField();		clip.filters = new Array(new DropShadowFilter(7, 45, 0x666666, .35, 4, 4, 2, 2, false, false, false));		targetX = 300;		targetY = -100;	}		private function makeTextField():Void {		clip.createTextField("txtField", 2, 0, 0, 0, 0);		clip.txtField.text = "";		clip.txtField.autoSize = true;		clip.txtField.selectable = false;		clip.txtField.embedFonts = true;	}		public function fadeOut():Void {		var twn:Tween = new Tween(clip, "_alpha", mx.transitions.easing.Regular.easeOut, 100, 0, 2, true);		twn.onMotionFinished = Delegate.create(this, reset);	}		public function reset():Void {		clip.txtField.text = "";		clip._alpha = 100;		LZGame.getInstance().setDisplayedText();	}		public function getClip():MovieClip {		return clip;	}	public function getText():String {		return clip.txtField.text;	}	public function setText(txt:String) {		clip.txtField.text = txt;		if (index == 0) {			clip.txtField.setTextFormat(new TextFormat("EmbedArial", 36, 0x0000FF));		} else if (index == 1) {			clip.txtField.setTextFormat(new TextFormat("EmbedArial", 36, 0x009900));		} else if (index == 2) {			clip.txtField.setTextFormat(new TextFormat("EmbedArial", 36, 0xFF6600));		}	}	public function setPos(xx:Number, yy:Number):Void {		targetX = xx;		targetY = yy;		new Tween(clip, "_x", mx.transitions.easing.Regular.easeOut, clip._x, targetX, 1, true);		new Tween(clip, "_y", mx.transitions.easing.Regular.easeOut, clip._y, targetY, 1, true);	}	public function getTargetX():Number {		return targetX;	}	public function getTargetY():Number {		return targetY;	}	public function getWidth():Number {		if (clip.txtField.text == "") {			return 0;		} else {			return clip._width;		}	}	public function isHitting(mc:MovieClip):Boolean {		return clip.hitTest(mc);	}}